set showmode
set cindent
set exrc
set secure

set	number
set rnu

set tabstop=4
set	softtabstop=4
set	shiftwidth=4
set	noexpandtab

set mouse=a

set clipboard=unnamedplus

set breakindent

set undofile

set splitright
set splitbelow


tnoremap <Esc><Esc> <C-\><C-n>

nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k

